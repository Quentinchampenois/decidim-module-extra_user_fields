<div class="card" id="extra_user_fields">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t ".title" %>
    </h2>
  </div>
  <div class="card-section">
    <%= form_for @form, url: signup_fields_path(@form), method: "post" do |f| %>

      <%= render partial: "form", object: f, locals: { component: @component } %>

      <%= f.submit t(".submit"), class: "button" %>
    <% end %>
  </div>
</div>
